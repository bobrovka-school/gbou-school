doctype html
html(lang="ru" prefix="og: http://ogp.me/ns#")
	include inc/head.pug
	body
		.body
			header#masthead(role="banner")
				include inc/header.pug
			.main
				.primary
					#content(role="main")
						article(id!="page-[*id*]" class!="page page-[*id*] type-page")
							|<@IF:[*id:neq(1)*]>
							header.entry-header
								h1.entry-title
									|[*longtitle*]
							|<@ENDIF>
							.entry-content
								|<@IF:[*id:is(1)*]>
								|{{@FILE assets/templates/projectsoft/tpl/gosuslugi.html}}
								|<@ENDIF>
								|[*content*]
				.secondary#secondary(role="complementary")
					.widgets
						include inc/widget_director
				.main-footer
					|{{@FILE assets/templates/projectsoft/tpl/sites_link.html}} 
			|{{@FILE assets/templates/projectsoft/tpl/footer.html}}
		|{{@FILE assets/templates/projectsoft/tpl/site_scripts.html}}
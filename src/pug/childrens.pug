doctype html
html(lang="ru" prefix="og: http://ogp.me/ns#")
	|{{@FILE assets/templates/projectsoft/tpl/head.html}}
	body
		.body.bvi-no-styles
			include inc/eya.pug
			header#masthead(role="banner")
				|{{@FILE assets/templates/projectsoft/tpl/header.html}}
			.main
				.primary
					#content(role="main")
						article(id!="page-[*id*]" class!="page page-[*id*] type-page clearfix")
							header.entry-header
								h1.entry-title
									|[*longtitle:ifempty=`[*pagetitle*]`*]
							.entry-content
								|[*content*]
								.childrens
									// Вывод дочерних ресурсов
									|[[DLMenu?
									|	&parents=`[*id*]`
									|	&maxDepth=`1`
									|	&showParent=`0`
									|	&urlScheme=`full`
									|	&ownerTPL=`@CODE: <ul>[+wrap+]</ul>`
									|	&rowTpl=`@CODE: <li><p><a href="[+url+]" [+link_attributes+]>[+title+]</a></p></li>`
									|	&prepare=`\ProjectSoft\PrepareDL::prepareUrlDLMenu`
									|	&rowClass=``
									|	&firstClass=``
									|	&lastClass=``
									|	&levelClass=``
									|	&webLinkClass=``
									|	&parentClass=``
									|	&hereClass=``
									|	&activeClass=``
									|	&oddClass=``
									|	&evenClass=``
									|]]
				.secondary#secondary(role="complementary")
					|{{@FILE assets/templates/projectsoft/tpl/widgets.html}}
				.main-footer
					|{{@FILE assets/templates/projectsoft/tpl/sites_link.html}} 
			|{{@FILE assets/templates/projectsoft/tpl/footer.html}}
		|{{@FILE assets/templates/projectsoft/tpl/site_scripts.html}}
